{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "refreshmint",
    "version": "0.1.0",
    "identifier": "com.refreshmint.desktop",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:3003",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "refreshmint",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "externalBin": ["binaries/hledger"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
