{
    "name": "refreshmint",
    "private": true,
    "version": "0.1.0",
    "license": "BSD-3-Clause",
    "type": "module",
    "scripts": {
        "build": "npm run typecheck && vite build",
        "dev": "vite",
        "lint:extensions": "eslint \"{builtin-extensions,.agents/skills}/**/*.mjs\"",
        "prettier": "prettier --ignore-path .prettierignore --ignore-path .gitignore --ignore-path \"$(scripts/get-git-user-ignore-file.mts)\"",
        "prettier-check": "npm run prettier -- --check .",
        "prettier-write": "npm run prettier -- --write .",
        "lint": "eslint && npm run prettier-check",
        "prepare": "husky",
        "preview": "vite preview",
        "typecheck:extensions": "tsc -p builtin-extensions/tsconfig.json && tsc -p .agents/tsconfig.json",
        "typecheck": "tsc --build && npm run typecheck:extensions",
        "test": "vitest"
    },
    "dependencies": {
        "@tauri-apps/api": "^2.10.1",
        "@tauri-apps/plugin-dialog": "^2.6.0",
        "@tauri-apps/plugin-store": "^2.4.2",
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
    },
    "devDependencies": {
        "@eslint/compat": "^2.0.2",
        "@eslint/js": "^9.39.1",
        "@tauri-apps/cli": "^2.10.0",
        "@tsconfig/strictest": "^2.0.8",
        "@types/node": "^24.10.1",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react-swc": "^4.2.2",
        "eslint": "^9.39.1",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import-x": "^4.16.1",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "jiti": "^2.6.1",
        "prettier": "^3.8.1",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.48.0",
        "vite": "^7.3.1",
        "vitest": "^4.0.18"
    },
    "prettier": {
        "semi": true,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "all"
    }
}
