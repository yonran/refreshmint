{
    "extends": ["@tsconfig/strictest"],
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noImplicitAny": false,
        "strictNullChecks": false,
        "noUncheckedIndexedAccess": false,
        "exactOptionalPropertyTypes": false,
        "skipLibCheck": true,
        "types": [],
        // don't use noUnused*; use @typescript-eslint/no-unused-vars instead
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["./**/*.mjs", "./**/*.d.ts"]
}
